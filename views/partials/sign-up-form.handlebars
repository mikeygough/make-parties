<!-- views/partials/sign-up-form.handlebars -->

<div class='form-group'>
  <label for='firstname'>First Name</label>
  <input
    name='firstname'
    class='form-control'
    placeholder='First Name'
    value='{{user.firstName}}'
  />
</div>
<div class='form-group'>
  <label for='lastname'>Last Name</label>
  <input
    name='lastname'
    class='form-control'
    placeholder='Last Name'
    value='{{user.lastName}}'
  />
</div>
<div class='form-group'>
  <label for='email'>Email</label>
  <input
    name='email'
    class='form-control'
    placeholder='Email'
    value='{{user.email}}'
  />
</div>
<div class='form-group'>
  <label for='password'>Password</label>
  <input
    name='password'
    class='form-control'
    placeholder='Password'
    value='{{user.password}}'
  />
</div>