<!-- views/partials/sign-up-form.handlebars -->

<div class='form-group'>
  <label for='firstName'>First Name</label>
  <input
    name='firstName'
    class='form-control'
    placeholder='First Name'
    value='{{user.firstName}}'
  />
</div>
<div class='form-group'>
  <label for='lastName'>Last Name</label>
  <input
    name='lastName'
    class='form-control'
    placeholder='Last Name'
    value='{{user.lastName}}'
  />
</div>
<div class='form-group'>
  <label for='email'>Email</label>
  <input
    name='email'
    class='form-control'
    placeholder='Email'
    value='{{user.email}}'
  />
</div>
<div class='form-group'>
  <label for='password'>Password</label>
  <input
    name='password'
    class='form-control'
    placeholder='Password'
    value='{{user.password}}'
  />
</div>